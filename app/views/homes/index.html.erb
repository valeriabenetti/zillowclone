
<div class="page-header">
  <% if logged_in? %>
    <%= link_to new_home_path, class: 'new-home-button btn btn-primary' do %>
      <span class="glyphicon glyphicon-home"></span>
      New Home
    <% end %>
  <% end%>
  <h1 Listing>Homes for Sale</h1>
</div>

<div class="row">
  <%- @homes.each do |home| %>
    <div class="col-md-6 colum-index">
      <div class="media">
        <div class="media-left media-middle">
          <%= link_to home do %>
            <% if home.image_url %>
              <%= image_tag(home.image_url, class: "media-object", size: "155x150") %>
            <% else %>
              <%= image_tag("download.jpg", class: "media-object", size: "155x150") %>
            <% end %>
          <% end %>
        </div>
        <div class="media-body">
          <h4 class="media-heading"><%= home.address %></h4>
          <p>
            <%= home.city %> , <%= home.state %> <%= home.zipcode %>
          </p>
          $ <%= home.price %>
          <p><%= home.bedrooms %> bedrooms , <%= home.bathrooms %> bathrooms</p>
        </div>
      </div>
    </div>
  <% end %>
  <%= paginate @homes %>
</div>
